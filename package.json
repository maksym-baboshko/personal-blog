  "scripts": {
    "start:dev": "concurrently \"npm run start:dev:server\" \"npm run start:dev:client\"",
    "start:dev:client": "webpack serve --env port=3000 --env mode=development --env project=frontend",
    "start:dev:server": "node ./config/json-server/index.js",
    "start:dev:storybook": "storybook dev -p 6006 -c ./config/storybook",
    "build:dev:client": "webpack build --env mode=development",
    "build:prod:client": "webpack build --env mode=production",
    "build:prod:storybook": "storybook build -c ./config/storybook",
    "test:unit:client": "jest --config ./config/jest/jest.config.ts",
    "check:ts": "eslint . --ext .ts,.tsx",
    "check:css": "stylelint '**/*.scss'",
    "check:formatting": "prettier --check ./src",
    "fix:ts": "eslint . --ext .ts,.tsx --fix",
    "fix:css": "stylelint '**/*.scss' --fix",
    "fix:formatting": "prettier --write ./src",
    "prepare": "husky install"
  },
