{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "dist"],
  "ts-node": { "compilerOptions": { "module": "CommonJS" } }
}
